<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#e3eeff"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="179dp"
        android:gravity="center"
        android:text="Sanal Bakiyenizi Giriniz"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="183dp" />

    <ImageView
        android:layout_width="190dp"
        android:layout_height="1.5dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black" />


    <EditText
        android:id="@+id/bakiye"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="273dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="number"
        android:text="0"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="236dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bakiye"
        android:layout_toEndOf="@+id/bakiye"
        android:text="₺"
        android:textSize="29sp" />

    <Button
        android:id="@+id/buttonIslem"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp"
        android:background="#53adcc"
        android:text="Simülasyona Git"
        android:textStyle="bold" />

</RelativeLayout>